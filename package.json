{
  "name": "simple-file-verification",
  "version": "3.0.4",
  "description": "Library to calculate SFV checksums from files and streams",
  "license": "MIT",
  "scripts": {
    "build": "tsdown",
    "dev": "npm run build -- --watch",
    "lint": "biome check --no-errors-on-unmatched --vcs-enabled=true --vcs-use-ignore-file=true",
    "prepack": "npm run build",
    "prepare": "lefthook install",
    "publish:jsr": "deno publish",
    "publish:npm": "np --no-yarn --any-branch",
    "start": "npm run dev",
    "test": "uvu -r tsm tests"
  },
  "type": "module",
  "exports": "./lib/sfv.mjs",
  "types": "./lib/sfv.d.mts",
  "files": [
    "lib/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=20"
  },
  "homepage": "https://www.npmjs.com/package/simple-file-verification",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-sfv.git"
  },
  "keywords": [
    "simple file verification",
    "sfv",
    "sfvx",
    "crc",
    "crc32",
    "md5",
    "sha1",
    "sha256",
    "sha512"
  ],
  "dependencies": {
    "cyclic-32": "^1.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/node": "^18.19.3",
    "execa": "^9.1.0",
    "glob": "^10.4.1",
    "lefthook": "^1.12.3",
    "lint-staged": "^15.2.5",
    "np": "^10.0.5",
    "tsdown": "^0.14.2",
    "tslib": "^2.6.2",
    "tsm": "^2.3.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "uvu": "^0.5.6"
  },
  "packageManager": "pnpm@9.1.2+sha512.127dc83b9ea10c32be65d22a8efb4a65fb952e8fefbdfded39bdc3c97efc32d31b48b00420df2c1187ace28c921c902f0cb5a134a4d032b8b5295cbfa2c681e2"
}
