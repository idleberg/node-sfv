{
	"name": "simple-file-verification",
	"version": "3.0.4",
	"description": "Library to calculate SFV checksums from files and streams",
	"license": "MIT",
	"scripts": {
		"build": "tsdown",
		"dev": "npm run build -- --watch",
		"lint": "biome check --no-errors-on-unmatched --vcs-enabled=true --vcs-use-ignore-file=true",
		"prepack": "npm run build",
		"prepare": "lefthook install",
		"publish:jsr": "deno publish",
		"publish:npm": "np --no-yarn --any-branch",
		"start": "npm run dev",
		"test": "uvu -r tsm tests"
	},
	"type": "module",
	"exports": "./lib/sfv.mjs",
	"types": "./lib/sfv.d.mts",
	"files": [
		"lib/",
		"types/",
		"LICENSE",
		"README.md"
	],
	"engines": {
		"node": ">=20"
	},
	"homepage": "https://www.npmjs.com/package/simple-file-verification",
	"repository": {
		"type": "git",
		"url": "https://github.com/idleberg/node-sfv.git"
	},
	"keywords": [
		"simple file verification",
		"sfv",
		"sfvx",
		"crc",
		"crc32",
		"md5",
		"sha1",
		"sha256",
		"sha512"
	],
	"dependencies": {
		"cyclic-32": "^1.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@idleberg/configs": "^0.3.3",
		"@types/node": "^24.10.1",
		"execa": "^9.6.0",
		"glob": "^13.0.0",
		"np": "^10.2.0",
		"tsdown": "^0.16.6",
		"tslib": "^2.8.1",
		"tsm": "^2.3.0",
		"typescript": "^5.9.3",
		"uvu": "^0.5.6"
	},
	"packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
