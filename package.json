{
	"name": "simple-file-verification",
	"version": "5.0.1",
	"description": "Library to calculate SFV checksums from files and streams",
	"license": "MIT",
	"scripts": {
		"build": "tsdown",
		"dev": "npm run build -- --watch",
		"lint": "concurrently --prefix-colors blue,green,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:e18e": "e18e-cli analyze",
		"prepack": "npm run lint && npm run build",
		"publish:jsr": "deno publish",
		"publish:npm": "np --any-branch",
		"test": "vitest"
	},
	"type": "module",
	"exports": {
		"types": {
			"require": "./lib/sfv.d.cts",
			"import": "./lib/sfv.d.mts"
		},
		"require": "./lib/sfv.cjs",
		"import": "./lib/sfv.mjs"
	},
	"files": [
		"lib/",
		"types/",
		"LICENSE",
		"README.md"
	],
	"engines": {
		"node": ">=20"
	},
	"homepage": "https://www.npmjs.com/package/simple-file-verification",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/node-sfv.git"
	},
	"keywords": [
		"simple file verification",
		"sfv",
		"sfvx",
		"crc",
		"crc32",
		"md5",
		"sha1",
		"sha256",
		"sha512"
	],
	"dependencies": {
		"hash-wasm": "^4.12.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@idleberg/configs": "^0.4.1",
		"@types/node": "^24.10.1",
		"@vitest/coverage-v8": "^4.0.15",
		"concurrently": "^9.2.1",
		"np": "^10.2.0",
		"tsdown": "^0.18.0",
		"tslib": "^2.8.1",
		"tsm": "^2.3.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"lefthook"
		]
	},
	"packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
