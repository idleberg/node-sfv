{
  "name": "simple-file-verification",
  "version": "2.0.1",
  "description": "Library to calculate SFV checksums from files and streams",
  "license": "MIT",
  "scripts": {
    "build": "rollup --config",
    "dev": "npm run start",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "prepack": "npm run build",
    "start": "rollup --watch --config",
    "test": "ava ./test/*.mjs --verbose"
  },
  "exports": {
    ".": {
      "import": "./lib/sfv.mjs",
      "require": "./lib/sfv.cjs"
    }
  },
  "files": [
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "homepage": "https://www.npmjs.com/package/simple-file-verification",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-sfv.git"
  },
  "keywords": [
    "simple file verification",
    "sfv",
    "sfvx",
    "crc",
    "crc32",
    "md5",
    "sha1",
    "sha256",
    "sha512"
  ],
  "dependencies": {
    "cyclic-32": "^1.2.0",
    "globby": "^11.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/node": "^16.11.60",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "ava": "^4.3.3",
    "eslint": "^8.24.0",
    "eslint-plugin-json": "^3.1.0",
    "esm": "^3.2.25",
    "execa": "^6.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all2": "^6.0.2",
    "prettier": "^2.7.1",
    "remark-cli": "^11.0.0",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-preset-prettier": "^2.0.1",
    "rollup": "^2.79.1",
    "rollup-plugin-filesize": "^9.1.2",
    "tslib": "^2.4.0",
    "typescript": "^4.8.3"
  },
  "lint-staged": {
    "*.(json|ts)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
